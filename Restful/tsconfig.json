{
  "compilerOptions": {
    "target": "ES2020",
    "types": ["node"],
    "lib": ["ESNext"],
    "module": "ESNext",
    "moduleResolution": "node",
    "rootDir": ".",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src", "prisma"]
}
